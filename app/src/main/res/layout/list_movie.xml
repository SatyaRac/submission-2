<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lt_movie"
    android:layout_margin="16dp"
    card_view:cardCornerRadius="4dp">
    
    <RelativeLayout
        android:id="@+id/rl_mov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        
        <ImageView
            android:id="@+id/iv_poster_mov"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginBottom="4dp"
            tools:ignore="ContentDescription"
            android:scaleType="centerCrop"/>

        
        <TextView
            android:id="@+id/tv_judul_mov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/iv_poster_mov"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_poster_mov"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="-142dp"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_toEndOf="@id/iv_poster_mov"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="@string/releasedate"/>

        <TextView
            android:id="@+id/tv_rilis_mov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_judul_mov"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="-82dp"
            android:layout_toEndOf="@id/iv_poster_mov"
            android:ellipsize="end"
            android:maxLines="5"
            />

        
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="210dp">

        <Button
            android:id="@+id/btn_detailmov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/cardview_light_background"
            android:text="@string/detail"
            android:textStyle="bold"/>


    </LinearLayout>

</android.support.v7.widget.CardView>